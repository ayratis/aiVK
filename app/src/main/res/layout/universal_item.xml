<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/un_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"/>

    <TextView
        android:id="@+id/un_center_icon"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:gravity="center"
        android:textColor="@color/linkText"
        android:textSize="17sp"
        android:maxLines="3"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/un_icon"
        android:layout_below="@+id/un_image"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/un_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/un_icon"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/un_image" />

    <TextView
        android:id="@+id/un_title_under_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/un_title_text"
        android:layout_toEndOf="@+id/un_icon"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>