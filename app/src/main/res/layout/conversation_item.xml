<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/msg_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/conversationItemInIcon"
        android:layout_width="25dp"
        android:layout_alignBottom="@+id/conversationItemMessageBGLayout"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/conversationItemUnreadOutboxIcon"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/conversationItemMessageBGLayout"
        android:background="@drawable/bg_unread"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:id="@+id/conversationItemMessageBGLayout"
        android:layout_toEndOf="@+id/conversationItemInIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conversationItemMessageText"
            android:layout_width="wrap_content"
            android:minWidth="75dp"
            android:maxWidth="250dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center_vertical" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/conversationItemAttachmentsRecyclerView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/conversationItemMessageDate"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>